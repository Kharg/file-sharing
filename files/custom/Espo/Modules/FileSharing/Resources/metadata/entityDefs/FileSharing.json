{
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "trim": true,
            "pattern": "$noBadCharacters"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "attachment": {
            "type": "file",
            "sourceList": [],
            "accept": []
        },
        "entryPointUrl": {
            "type": "varchar",
            "copyToClipboard": true,
            "readOnly": true,
            "notStorable":true
        },
        "validTill": {
            "notNull": false,
            "type": "datetime",
            "useNumericFormat": true,
            "minuteStep": 30
        },
        "forceFileDownload": {
            "notNull": true,
            "type": "bool",
            "tooltip": true
        },
        "allowedUsage": {
            "type": "int",
            "default": 0,
            "tooltip": true
        },
        "accessCount": {
            "type": "int",
            "readOnly": true
        },
        "accessToken": {
            "type": "varchar",
            "maxLength": 36,
            "readOnly": true
        },
        "status": {
            "type": "enum",
            "options": [
                "Active",
                "Draft",
                "Expired",
                "Canceled"
            ],
            "style": {
                "Active": "success",
                "Draft": "warning",
                "Expired": "info",
                "Canceled": "danger"
            },
            "default": "Active",
            "displayAsLabel": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "attachment": {
            "type": "belongsTo",
            "entity": "Attachment",
            "skipOrmDefs": true,
            "disabled": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        }
    }
}